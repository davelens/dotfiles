[user]
  name = davelens
  email = github@davelens.be
  signingkey = 07C7F96B857C4CAA
[diff]
[color]
  ui = auto
[alias]
  aa = add --all
  amend = commit --amend
  ap = add -p
  b = rev-parse --abbrev-ref HEAD
  ci = commit
  ci-status = "!/bin/bash ${HOME}/.local/bin/git/ci-status"
  co = checkout
  dc = diff --cached

  # Delete git-Deleted Files
  ddf = "!git ls-files --deleted -z | xargs -0 git rm"

  di = diff

  # Delete New Files
  dnf = "!for file in $(git st | grep '??' | awk '{print substr($0, 4)}'); do rm -r $file; done"

  fa = fetch --all
  ff = merge --ff-only
  h = !git head
  head = !git l -1
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  loc = "!/bin/bash ${HOME}/.local/bin/git/loc"

  # Extensive Merge script. 
  # Checkout -> no fast-forward merge -> push -> remove local/remote branches.
  m = "!/bin/bash ${HOME}/.local/bin/git/merge-branch"

  # push + Merge Develop into Master
  mdm = "!f() { git push origin develop && git checkout master && git merge develop && git push origin master && git checkout develop; }; f"

  # GitLab Merge Requests (mainly making use of https://github.com/NARKOZ/gitlab)
  mr = "!/bin/bash ${HOME}/.local/bin/git/gitlab-merge-request"

  # Merge into the temp branch
  mt = "!/bin/bash ${HOME}/.local/bin/git/merge-to-temp"

  pod = push origin develop
  pom = push origin master
  pr = "!f() { base=${1:-develop}; gh pr create --base \"$base\"; }; f"

  # remove local branches that were created from `git pr`
  pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"

  pr-body = "!/bin/bash ${HOME}/.local/bin/git/github-pr-body"
  pullff = pull --ff-only
  r = !git --no-pager l -20 && echo ""
  s = "!/bin/bash ${HOME}/.local/bin/git/switch-branch"

  # Uses the GitHub API to perform a search query and find repos.
  # Made to fit `${HOME}/.local/bin/tmux/d -n`.
  search-repos = "!/bin/bash ${HOME}/.local/bin/git/github-search-repos"

  st = status --short
  web = instaweb --httpd=webrick

[format]
  pretty=format:%C(yellow)%h%Creset | %C(green)%ad (%ar)%Creset | %C(blue)%an%Creset | %s

[merge]
  tool = vimdiff

[core]
  editor = ${EDITOR}
  excludesfile = ~/.gitignore_global
  pager = delta --side-by-side

[delta]
  syntax-theme = Solarized (dark)

[interactive]
  diffFilter = delta --color-only

[commit]
  gpgsign = true

[url "https://"]
  insteadOf = git://
