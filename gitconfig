[user]
	name = davelens
	email = github@davelens.be
[diff]
[color]
	ui = auto
[alias]
	st = status --short
	ci = commit
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git --no-pager l -20
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	pom = push origin master

[format]
	pretty=format:%C(yellow)%h%Creset | %C(green)%ad (%ar)%Creset | %C(blue)%an%Creset | %s

[merge]
	tool = vimdiff

[core]
	editor = /usr/local/bin/vim
	excludesfile = ~/.gitignore_global
