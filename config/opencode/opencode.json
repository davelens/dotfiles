{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "leader": "ctrl+space",
    "session_new": "none",
    "messages_page_up": "<leader>p",
    "messages_page_down": "<leader>n"
  },
  "theme": "system",
  "permission": {
    "external_directory": {
      "~/Repositories/davelens/dotfiles/**": "allow",
      "~/Repositories/davelens/dotsys/**": "allow",
      "~/Repositories/davelens/dotvim/**": "allow"
    }
  },
  "plugin": [
    "opencode-anthropic-auth@latest"
  ]
}
