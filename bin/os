#!/usr/bin/env bash
set -e

[[ -f $DOTFILES_PATH/bash/helpers.sh ]] && source $DOTFILES_PATH/bash/helpers.sh

if [ -f /proc/version ] && grep -qEi "(microsoft|WSL)" /proc/version ; then
  succeed 'windows'
else
  case "$(uname -s)" in
    Darwin) succeed 'macos' ;;
    Linux) succeed 'linux' ;;
    FreeBSD) succeed 'freebsd' ;;
  esac

fi
