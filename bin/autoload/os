#!/usr/bin/env bash
set -e

# Detect container environment
if [ -f /.dockerenv ] || [ -f /run/.containerenv ]; then
  echo 'linux'
elif [ -f /proc/version ] && grep -qEi "(microsoft|WSL)" /proc/version ; then
  echo 'wsl'
else
  case "$(uname -s)" in
    Darwin) echo 'macos' ;;
    Linux) echo 'linux' ;;
    FreeBSD) echo 'freebsd' ;;
  esac
fi
