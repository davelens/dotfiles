#!/usr/bin/env bash

# Useful to feed file structures to one of my local AI models.

if [ -z "$1" ]; then
  if [ -d 'lib' ]; then
    set -- "lib"
  else
    set -- "."
  fi
fi

find "$1" \
  -type d \( -name .git -o -name node_modules -o -name tmp \) -prune -false -o \
  -type f -exec bash -c '
    file=${1//\/\//\/}
    echo -en "---\n# File: $file\n"
    cat "$file"
    echo ""
  ' _ {} \;
