#!/bin/bash

. ${DOTFILES_PATH}/bin/utilities/tmux/helpers.sh

stock_message() {
  if [[ $(echo $2 | grep 'red error-color') ]] || [[ $(echo $2 | grep 'page-404') ]]; then
    local fgcolor='52'
    local check='êÑÇ'
  else
    local fgcolor='40'
    local check='‚úì'
  fi

  printf "$(segment "$1:#[fg=colour$fgcolor]$check")"
}

