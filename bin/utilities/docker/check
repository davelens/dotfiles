#!/usr/bin/env bash
set -e

# Check if a Docker container is running.
#
# Usage: docker check <container_name>
# Returns 0 if running, 1 otherwise.
# Example: if docker check mysql; then echo "MySQL is running"; fi

! command -v docker >/dev/null && exit 1
docker info &>/dev/null || exit 1

container_name="$1"
[ -z "$container_name" ] && exit 1

docker ps --format '{{.Names}}' | grep -qw "$container_name"
