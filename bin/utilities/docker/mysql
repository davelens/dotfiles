#!/usr/bin/env bash
set -e

! command_exists 'docker' && fail "ERROR: Docker is not installed."
docker info &>/dev/null || fail "ERROR: Docker is not running."

database="${1:-}"

if [[ -n "$database" ]]; then
  mysql -h localhost -P 3306 --protocol=tcp "$database"
else
  mysql -h localhost -P 3306 --protocol=tcp
fi
