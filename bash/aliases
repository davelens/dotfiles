#!/bin/bash

alias clearcache='sudo dscacheutil -flushcache'
alias csh='configure_ssh_host'
alias fs='get_filesizes'
alias mf='move_files'
alias gsd='get_sql_dump'
alias his='history | grep'
alias ls='ls -G'
alias lsa='ls -hal'
alias mr='mysql_replace'
alias se='svn_export_changed_files'
alias tss='take_screenshot'
alias ss='osascript ~/.osx/hide-terminal.scpt && tss'
alias thf='toggle_hidden_files'
alias webview='git instaweb --httpd=webrick'
alias nano='vim'
alias vi='vim'
alias rsync='rsync --exclude-from=$HOME/.osx/rsync-exclude-list.txt'
alias toggle_desktop='toggle_default finder CreateDesktop'
alias toggle_hidden_files='toggle_default finder AppleShowAllFiles'
alias memcache_start='memcached -d -m 100 start'
alias pu='phpunit --colors'
alias add_vhost='sudo ~/.bin/./add_vhost.sh'

# dir size in current dir
alias ds='du -sh */'

# remove all .svn folders recursively in current dir
alias purgesvn="find . -type d -name '.svn' -exec rm -rf '{}' '+' "
