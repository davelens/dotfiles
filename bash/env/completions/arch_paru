# Completion for `utility arch paru`

_arch_paru_completions() {
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local prev="${COMP_WORDS[COMP_CWORD-1]}"

  case "$prev" in
    paru)
      COMPREPLY=($(compgen -W "--install-from-file --prune --update" -- "$cur"))
      ;;
    --install-from-file)
      # Complete file paths without adding space after directories
      compopt -o nospace
      COMPREPLY=($(compgen -f -- "$cur"))
      ;;
    *)
      COMPREPLY=()
      ;;
  esac
}

_arch_paru_completions
unset -f _arch_paru_completions
