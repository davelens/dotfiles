{
  "additional-repositories": ["multilib"],
  "archinstall-language": "English",
  "audio_config": {
    "audio": "pipewire"
  },
  "bootloader_config": {
    "bootloader": "Grub",
    "uki": false,
    "removable": false
  },
  "hostname": "archvm",
  "kernels": ["linux"],
  "locale_config": {
    "kb_layout": "us",
    "sys_enc": "UTF-8",
    "sys_lang": "en_US"
  },
  "network_config": {
    "type": "nm"
  },
  "ntp": true,
  "packages": [
    "amd-ucode",
    "base-devel",
    "git",
    "libyaml",
    "neovim",
    "openssh",
    "python",
    "unzip"
  ],
  "parallel downloads": 5,
  "profile_config": {
    "gfx_driver": "AMD / ATI (open-source)",
    "profile": {
      "main": "Desktop"
    }
  },
  "swap": true,
  "timezone": "Europe/Brussels",
  "custom_commands": [
    "printf '%s\\n' 'davelens ALL=(ALL) NOPASSWD: ALL' 'Defaults timestamp_timeout=120' > /etc/sudoers.d/00_davelens && chmod 0440 /etc/sudoers.d/00_davelens"
  ]
}
