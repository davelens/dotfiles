{
  "additional-repositories": ["multilib"],
  "archinstall-language": "English",
  "audio_config": {
    "audio": "pipewire"
  },
  "bootloader_config": {
    "bootloader": "Grub",
    "uki": false,
    "removable": false
  },
  "hostname": "archvm",
  "kernels": ["linux"],
  "locale_config": {
    "kb_layout": "us",
    "sys_enc": "UTF-8",
    "sys_lang": "en_US"
  },
  "network_config": {
    "type": "nm"
  },
  "ntp": true,
  "packages": [
    "base-devel",
    "git",
    "neovim",
    "amd-ucode",
    "intel-ucode"
  ],
  "parallel downloads": 5,
  "profile_config": {
    "gfx_driver": "All open-source",
    "profile": {
      "details": ["Gnome"],
      "main": "Desktop"
    }
  },
  "swap": true,
  "timezone": "Europe/Brussels",
  "custom_commands": [
    "curl -fsSL https://raw.githubusercontent.com/davelens/dotfiles/refs/heads/master/setup/remote/init.sh | bash"
  ]
}
